pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from your repository
                //git 'https://your-repo-url.git'
                echo "Hello"
            }
        }
        stage('Checkmarx Scan') {
            steps {
                script {
                    // Run Checkmarx scan
                   checkmarxASTScanner additionalOptions: '', baseAuthUrl: '', branchName: '', checkmarxInstallation: 'CxOne', credentialsId: '', projectName: 'test-pipeline', serverUrl: '', tenantName: ''
                }
            }
        }
    }
    post {
        always {
            // Archive the results
            archiveArtifacts artifacts: '**/CheckmarxReports/*.*', allowEmptyArchive: true
        }
    }
}
